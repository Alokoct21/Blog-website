    <form action="/compose" method="post">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Title</label>
          <input type="text" name="postTitle" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
   
        </div>
